# Ochrana .env souboru
<Files ".env">
    Require all denied
</Files>

# Ochrana setup.html po dokončení instalace
<Files "setup.html">
    Require all denied
</Files>

# Ochrana PHP config souborů
<Files "config.php">
    Require all denied
</Files>

# Zapnutí rewrite engine (pokud potřebuješ pretty URLs)
# RewriteEngine On
# RewriteBase /

# Bezpečnostní hlavičky
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Zakázat zobrazení obsahu složek
Options -Indexes

# PHP nastavení (volitelné)
<IfModule mod_php.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>
